<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:id="@+id/item_container"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_margin="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/coupon_content"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/colorPrimaryDark"
        android:layout_gravity="center_vertical">

        <TextView
            android:id="@+id/discount_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="39dp"
            android:gravity="fill_vertical"
            android:lineSpacingExtra="0dp"
            android:text="20"
            android:textColor="@color/colorAccent"
            android:textSize="48sp" />

        <TextView
            android:id="@+id/discount_value_mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/discount_value"
            android:layout_toRightOf="@id/discount_value"
            android:gravity="center"
            android:text="å…ƒ"
            android:textColor="@color/colorAccent"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/good_catagory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="39dp"
            android:layout_marginRight="40dp"
            android:gravity="fill_vertical"
            android:lineSpacingExtra="0dp"
            android:text="shampoo"
            android:textColor="@color/colorAccent"
            android:textSize="24sp" />

        <Button
            android:id="@+id/detail_btn"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="12dp"
            android:background="@mipmap/ic_more_horiz" />
    </RelativeLayout>
</android.support.v7.widget.CardView>