<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pinyin.ui.layout.MainActivity">
    <FrameLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.pinyin.ui.mainnavigatetabbar.widget.MainNavigateTabBar
        android:id="@+id/navigateTabBar"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="50dp"
        app:containerId="@id/main_container"
        app:navigateTabSelectedTextColor="@color/colorPrimaryDark"
        app:navigateTabTextColor="@color/tab_text_normal"/>
    <at.markushi.ui.CircleButton
        android:layout_width="64dip"
        android:layout_height="64dip"
        android:src="@mipmap/middle_img"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@id/navigateTabBar"
        android:layout_marginBottom="13dp"
        app:cb_color="#cfcaca"
        app:cb_pressedRingWidth="30dip" />
</RelativeLayout>
